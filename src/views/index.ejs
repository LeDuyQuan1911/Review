    </div>

    <!-- Danh s√°ch Users -->
    <div class="bg-white shadow-lg rounded-xl p-8 w-11/12 max-w-5xl">
      <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">
        üìã Danh S√°ch Ng∆∞·ªùi D√πng
      </h3>
      <table
        class="min-w-full border border-gray-200 rounded-lg overflow-hidden"
      >
        <thead class="bg-blue-600 text-white">
          <tr>
            <th class="py-3 px-4 text-left">ID</th>
            <th class="py-3 px-4 text-left">Username</th>
            <th class="py-3 px-4 text-left">Email</th>
            <th class="py-3 px-4 text-left">Address</th>
            <th class="py-3 px-4 text-center">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200" id="userTableBody">
          <!-- <h3><%= JSON.stringify(data)%></h3> -->
          <% for (let i = 0; i < data.length; i++) { %>
          <tr class="hover:bg-gray-50 transition">
            <td class="py-3 px-4 text-gray-900"><%= data[i].id %></td>
            <td class="py-3 px-4 text-gray-900"><%= data[i].name %></td>
            <td class="py-3 px-4 text-gray-900"><%= data[i].email %></td>
            <td class="py-3 px-4 text-gray-900"><%= data[i].address %></td>
            <td class="py-3 px-4 text-center">
              <div class="flex gap-3">
                <form action="/detail-user/<%= data[i].id %>" method="get">
                  <button
                    class="bg-green-500 hover:bg-green-600 text-white font-semibold py-1 px-4 rounded-lg shadow transition-all"
                  >
                    View
                  </button>
                </form>
                <form action="/delete-user/<%= data[i].id %>" method="post">
